{# /* Macro Master */ #}

{# //## Svg icons #}
{% macro icon(idName) %}
<svg role="img" class="icon"><use xlink:href="#icon-{{idName}}"></use></svg>
{% endmacro %}

{# //## Game Banner #}
{% macro game(gameName) %}
<img src="data:image/svg+xml;charset=utf8,%3Csvg%20xmlns='http://www.w3.org/2000/svg'%3E%3C/svg%3E" alt="{{gameName}}">
{% endmacro %}